        <controls:UniformGrid Grid.Row="2"
                              ColumnSpacing="48" RowSpacing="48"
                              Margin="24,24,24,24">


            <Grid

                Grid.ColumnSpan="1"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>



                <AutoSuggestBox QueryIcon="Find"
                            PlaceholderText="Cerca"
                            HorizontalAlignment="Center"
                            Width="260" Height="32" />


                <AutoSuggestBox
                    x:Name="SearchTextBox"
                    Height="33"
                    MaxWidth="600"
                    Margin="40,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    IsTabStop="True"
                    
                    >
                    <AutoSuggestBox.QueryIcon>
                        <muxc:AnimatedIcon>
                            <muxc:AnimatedIcon.Source>
                                <animatedvisuals:AnimatedFindVisualSource />
                            </muxc:AnimatedIcon.Source>
                            <muxc:AnimatedIcon.FallbackIconSource>
                                <muxc:SymbolIconSource Symbol="Find"/>

                            </muxc:AnimatedIcon.FallbackIconSource>
                        </muxc:AnimatedIcon>
                    </AutoSuggestBox.QueryIcon>
                </AutoSuggestBox>

            </Grid>

            <Grid CornerRadius="8"
                  Padding="12"
                  
                  BorderThickness="1"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <TextBlock x:Name="TextValRecenti" Grid.Row="0" Text="Valutazioni recenti" FontSize="24" VerticalAlignment="Top" Margin="8" />
                
                
                    <HyperlinkButton Grid.Row="2"  Content="Vedi tutti i voti"
                 Click="HyperlinkButton_Click" VerticalAlignment="Bottom"
                />

                   
                    <ListView x:Name="Listtest" RelativePanel.Below="TextValRecenti" Grid.Row="1"
                          SelectionMode="Single"
                              
                              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          
                          ScrollViewer.VerticalScrollBarVisibility="Visible">

                        <ListView.ItemTemplate>

                            <DataTemplate x:DataType="roba:Grade">
                                <RelativePanel>

                                    <Grid RelativePanel.AlignVerticalCenterWithPanel="True" x:Name="gridVoto">
                                        <Ellipse x:Name="Ellipse"
                                             Grid.RowSpan="2"
                                             Width="42"
                                             Height="42"
                                             Margin="2"
                                             Fill="{x:Bind decimalValue, Converter={StaticResource GradeToColorConverter}}"

                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Center">
                                            <!-- ="{ThemeResource SystemControlBackgroundBaseMediumBrush}" -->
                                        </Ellipse>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Text="{x:Bind displayValue}" FontSize="14" Foreground="#FFFFFF" />

                                    </Grid>

                                    <RelativePanel RelativePanel.AlignVerticalCenterWithPanel="True" RelativePanel.RightOf="gridVoto">
                                        <TextBlock x:Name="textMateria" TextWrapping="Wrap"
                                           MaxWidth="500"
                                           Text="{x:Bind subjectDesc}"

                                           Style="{ThemeResource BaseTextBlockStyle}"
                                           Margin="12,6,0,0" />

                                        <TextBlock RelativePanel.Below="textMateria"
                                           TextWrapping="Wrap"
                                              

                                           Text="{x:Bind notesForFamily}"

                                           Style="{ThemeResource BodyTextBlockStyle}"
                                           Margin="12,0,0,6" />

                                        <TextBlock RelativePanel.RightOf="textMateria" x:Name="dataVoto"
                                           Text="{x:Bind evtDate, Converter={StaticResource DateTimeToNormalDateConverter}}"

                                           Foreground="LightGray"
                                           Style="{ThemeResource BaseTextBlockStyle}"
                                           Margin="12,6,0,0" />

                                        <TextBlock RelativePanel.RightOf="dataVoto"
                                           Text="{x:Bind componentDesc}"


                                           Style="{ThemeResource BodyTextBlockStyle}"
                                           Foreground="LightGray"
                                           Margin="12,6,0,0" />

                                    </RelativePanel>



                                </RelativePanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>


            </Grid>


            <Grid



                Grid.ColumnSpan="1"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>

                <TextBlock Text="Ecco la media dei tuoi voti"  Grid.RowSpan="2" RenderTransformOrigin="0.513,3.263" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top" Width="607" Margin="36,76,0,0"/>
                <TextBlock x:Name="TextBlockMedia" Text="gdsgfdggdfgfdgfd"  Grid.RowSpan="2" SelectionChanged="TextBlock_SelectionChanged" HorizontalAlignment="Center" FontSize="45" FontWeight="Bold" VerticalAlignment="Center"  />


            </Grid>
            <StackPanel
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">





            </StackPanel>


        </controls:UniformGrid>

    </Grid>
</Page>