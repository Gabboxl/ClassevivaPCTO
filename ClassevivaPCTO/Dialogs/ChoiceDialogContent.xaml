<Page x:Class="ClassevivaPCTO.Dialogs.ChoiceDialogContent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <TextBlock Margin="0,0,0,12"
                   Text="{CustomResource ProfileChoiceDialogBody}"
                   TextWrapping="Wrap" />
        <ComboBox x:Name="ComboChoice"
                  Width="350"
                  Header="{CustomResource ProfileChoiceDialogComboboxHeader}"
                  SelectedIndex="{x:Bind chosenIndex, Mode=TwoWay}" />
    </StackPanel>

</Page>