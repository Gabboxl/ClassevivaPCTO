<Page
    x:Class="ClassevivaPCTO.Dialogs.ChoiceDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBlock Text="{CustomResource ProfileChoiceDialogBody}" TextWrapping="Wrap" Margin="0,0,0,12" />
        <ComboBox x:Name="ComboChoice" Header="{CustomResource ProfileChoiceDialogComboboxHeader}" Width="350" SelectedIndex="{x:Bind chosenIndex, Mode=TwoWay}" />
    </StackPanel>

</Page>