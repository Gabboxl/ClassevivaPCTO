<ContentDialog
    x:Class="ClassevivaPCTO.Dialogs.FirstRunDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="FirstRunDialog"
    d:DesignHeight="345"
    d:DesignWidth="550"
    mc:Ignorable="d">
    <ContentDialog.TitleTemplate>
        <DataTemplate x:DataType="x:String">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image
                    Width="40"
                    Height="40"
                    Source="ms-appx:///Assets/StoreLogo.png" />
                <TextBlock
                    Margin="16,-8,0,0"
                    VerticalAlignment="Center"
                    Text="{x:Bind}" FontWeight="SemiBold" FontSize="24"/>
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>

    <ScrollViewer MaxWidth="800">
        <StackPanel>
            
            <TextBlock x:Uid="FirstRun_Body" Margin="0,25"  TextWrapping="WrapWholeWords" FontSize="15" FontWeight="SemiBold" Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
        </StackPanel>
    </ScrollViewer>
</ContentDialog>