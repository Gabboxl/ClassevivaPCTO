<Page
    x:Class="ClassevivaPCTO.Dialogs.NoticeDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassevivaPCTO.Dialogs"
    xmlns:utils="using:ClassevivaPCTO.Utils"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="ListViewFullStretchStyle" TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        </Style>

        <!-- datatemplate to show notice attachment name and a commandbutton to download it -->
        <DataTemplate x:Key="AttachmentListViewDataTemplate"
                  x:DataType="utils:NoticeAttachment">

            <Grid HorizontalAlignment="Stretch" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                <RelativePanel Grid.Column="0" >
                    <FontIcon Glyph="&#xe7c3;"
                              
                              RelativePanel.AlignVerticalCenterWithPanel="True"
                              x:Name="IconaAttachment"/>


                    <TextBlock x:Name="nomeAllegato"
                               RelativePanel.RightOf="IconaAttachment"
                                                 RelativePanel.AlignVerticalCenterWithPanel="True"
                               Grid.Column="0"
                               TextWrapping="Wrap"
                                           MaxWidth="500"
                                           Text="{x:Bind fileName}"
                                           Style="{ThemeResource BaseTextBlockStyle}"
                                           Margin="6,0,0,0" />

                    </RelativePanel>



                <RelativePanel Grid.Column="1" HorizontalAlignment="Right" >
                    <AppBarButton x:Name="ButtonOpen" RelativePanel.LeftOf="ButtonSave" Click="ButtonOpen_Click"  RelativePanel.AlignVerticalCenterWithPanel="True" Icon="OpenFile" Label="Open" />

                    <AppBarButton x:Name="ButtonSave" Click="ButtonSave_Click" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Icon="SaveLocal" Label="Save" />

                </RelativePanel>

            </Grid>

        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  
        </Grid.RowDefinitions>
    <RelativePanel Grid.Row="0" HorizontalAlignment="Stretch">

        <TextBlock x:Name="noticeBodyText" 
                   TextWrapping="Wrap"
                   Style="{ThemeResource BodyTextBlockStyle}"
                                           
                                           Text="{x:Bind CurrentReadResult.item.text}"
                                           Margin="8,8,0,8" />


        <TextBlock  x:Name="titoloAttachments" RelativePanel.Below="noticeBodyText"
                   TextWrapping="Wrap"
                   Style="{ThemeResource BodyStrongTextBlockStyle}"
                                           MaxWidth="500"
                                           Text="{x:Bind AllegatiText}"
                                           Margin="8,8,0,8" />
        
        <ListView RelativePanel.Below="titoloAttachments"
                  x:Name="AttachmentsListView"
                  ItemContainerStyle="{StaticResource ListViewFullStretchStyle}"
                  ItemTemplate="{StaticResource AttachmentListViewDataTemplate}">
            
        </ListView>
    </RelativePanel>
    </Grid>
</Page>
