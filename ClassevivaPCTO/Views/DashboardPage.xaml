<Page
    x:Class="ClassevivaPCTO.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassevivaPCTO"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:microconverters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:controlscust="using:ClassevivaPCTO.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converters="using:ClassevivaPCTO.Converters"
        xmlns:contract7Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:datatemplates="using:ClassevivaPCTO.Controls.DataTemplates"
    xmlns:roba="using:ClassevivaPCTO.Utils"

    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>
        
        
        <ResourceDictionary>
            <microconverters:BoolToVisibilityConverter  x:Key="BoolToVisibilityConverter" />
            <ResourceDictionary.MergedDictionaries>
                
               
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0">

            <TextBlock x:Name="TextBenvenuto"   Text="test " FontSize="42" VerticalAlignment="Top"
                   Margin="32,16,0,0" />

            <AppBarButton  RelativePanel.RightOf="TextBenvenuto" VerticalAlignment="Top"  Margin="32,16,0,0" Icon="Refresh" Label="Aggiorna" Click="AggiornaButton_Click"/>
        </RelativePanel>




        <controls:UniformGrid Grid.Row="1"
                              ColumnSpacing="48" RowSpacing="48"
                              Margin="24,24,24,24">


            <Grid 
                CornerRadius="8"
                Padding="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>


                <TextBlock x:Name="TextOggiAgenda" Grid.Row="0" Text="Oggi a scuola" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8" />


                <ScrollViewer ZoomMode="Disabled" Grid.Row="2" x:Name="OverviewScrollviewer" toolkit:FrameworkElementExtensions.EnableActualSizeBinding="true"
            IsTabStop="False" IsVerticalScrollChainingEnabled="False"
            
            HorizontalScrollMode="Disabled" HorizontalScrollBarVisibility="Auto"

            VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Visible">

                    <StackPanel  ScrollViewer.HorizontalScrollMode="Disabled"
                                                                  Width="{Binding ElementName=OverviewScrollviewer, Path=(toolkit:FrameworkElementExtensions.ActualWidth)}"
>

                        <ListView x:Name="ListViewAbsencesDate" 
                          SelectionMode="Single"
                              
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ItemTemplate="{StaticResource VotiListViewDataTemplateNope}"
                              
                          ScrollViewer.VerticalScrollMode="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        </ListView>


                        <ListView x:Name="ListViewVotiDate"
                          SelectionMode="Single"
                              
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ItemTemplate="{StaticResource VotiListViewDataTemplateNope}"
                              
                          ScrollViewer.VerticalScrollMode="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        </ListView>

                        <ListView x:Name="ListViewLezioniDate"
                          SelectionMode="Single"
                              
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ItemTemplate="{StaticResource LessonListViewDataTemplate}"
                              
                          ScrollViewer.VerticalScrollMode="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        </ListView>

                        <ListView x:Name="ListViewAgendaDate"
                          SelectionMode="Single"
                              
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ItemTemplate="{StaticResource AgendaEventListViewDataTemplate}"
                              
                          ScrollViewer.VerticalScrollMode="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        </ListView>

                    </StackPanel>


                </ScrollViewer>


                <HyperlinkButton Grid.Row="2"  Content="Apri agenda"
                 Click="HyperlinkButton_Click_1" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                />

            </Grid>

            <Grid CornerRadius="8"
                  Padding="12"
                  BorderThickness="1"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <TextBlock x:Name="TitleRecentGrades" Grid.Row="0" Text="Valutazioni recenti" FontSize="24" VerticalAlignment="Top" Margin="8" />


                <ScrollViewer Grid.Row="2" ZoomMode="Disabled"
            IsTabStop="False" IsVerticalScrollChainingEnabled="False"
            
            HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">


                        <ListView x:Name="ListRecentGrades" 
                          SelectionMode="Single"
                              
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ItemTemplate="{StaticResource VotiListViewDataTemplateCompact}"
                              
                          ScrollViewer.VerticalScrollMode="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                        </ListView>


                </ScrollViewer>

                <HyperlinkButton Grid.Row="2"  Content="Vedi tutti i voti"
                 Click="HyperlinkButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                />

            </Grid>


            <Grid
                Grid.ColumnSpan="1"
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center"  Text="Media totale dei voti:"    FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top" />

                    <muxc:ProgressRing IsActive="True" x:Name="ProgressRingMedia" 
                           RelativePanel.AlignVerticalCenterWithPanel="True"
                           RelativePanel.AlignHorizontalCenterWithPanel="True"
                                       Visibility="{x:Bind DashboardPageViewModel.IsLoadingMedia, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    
                    <TextBlock  x:Name="TextBlockMedia" Text="test" Visibility="Collapsed"  HorizontalAlignment="Center" FontSize="45" FontWeight="Bold" VerticalAlignment="Center"  />
                </StackPanel>

            </Grid>
            
            
            
            
            
            
            
            <Grid
                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                CornerRadius="8"
                Padding="12"
                BorderThickness="1"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TextBachecaRecenti" Grid.Row="0" Text="Comunicazioni recenti" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="8" />

                <ScrollViewer Grid.Row="2" ZoomMode="Disabled"
            IsTabStop="False" IsVerticalScrollChainingEnabled="False"
            
            HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"
            VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">


                    <ListView x:Name="ListRecentNotices" 
                          SelectionMode="Single"
                              
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ItemTemplate="{StaticResource NoticeListViewDataTemplate}"
                              
                          ScrollViewer.VerticalScrollMode="Disabled"
                                  ScrollViewer.VerticalScrollBarVisibility="Disabled">

                    </ListView>


                </ScrollViewer>

                <HyperlinkButton Grid.Row="2"  Content="Vedi comunicazioni"
                 Click="HyperlinkButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                />


            </Grid>


        </controls:UniformGrid>

    </Grid>
</Page>