<Page
    x:Class="ClassevivaPCTO.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassevivaPCTO"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:controls2="using:ClassevivaPCTO.Controls"
    xmlns:microconverters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI"
    xmlns:controlscust="using:ClassevivaPCTO.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:converters="using:ClassevivaPCTO.Converters"
    xmlns:contract7Present="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)"
    xmlns:roba="using:ClassevivaPCTO.Utils"


    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">

    <Page.Resources>


        <ResourceDictionary>
            <microconverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>

    </Page.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="950" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MyUniformGrid.Columns" Value="2" />
                        <!--<Setter Target="MyUniformGrid.Rows" Value="2" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MyUniformGrid.Columns" Value="1" />
                        <!--
                        <Setter Target="MyUniformGrid.Rows" Value="3" />
                        -->

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>


        <RelativePanel Grid.Row="0" Margin="0,18,0,0">

            <TextBlock x:Name="TextTitolo" Text="Dashboard di " Style= "{StaticResource TitleLargeTextBlockStyle}"  VerticalAlignment="Top"
                       Margin="32,0,0,0" />

            <Button RelativePanel.RightOf="TextTitolo" x:Name="AggiornaCommand"
                    RelativePanel.AlignVerticalCenterWith="TextTitolo"
                    Width="48"
                    Height="36"
                    Margin="16,0,0,0" Click="AggiornaButton_Click">
                <FontIcon Glyph="&#xE72C;" HorizontalAlignment="Center" />
            </Button>
        </RelativePanel>


        <ScrollViewer

            Grid.Row="1">


            <controls2:UniformGridEx
                x:Name="MyUniformGrid"
                ColumnSpacing="36" RowSpacing="36"
                MinRowHeight="250"

                Margin="24,24,24,24">


                <Grid
                    Grid.RowSpan="2"
                    CornerRadius="8"
                    Padding="12"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />

                    </Grid.ColumnDefinitions>

                    <RelativePanel Grid.Row="0">


                        <TextBlock x:Name="TextOggiAgenda" Text="Eventi del giorno
                                   " FontSize="20" VerticalAlignment="Top" FontWeight="Medium"
                                   HorizontalAlignment="Left" Margin="8,4,0,18" />

                        <muxc:ProgressRing IsActive="True" x:Name="ProgressRingAgenda"
                                           RelativePanel.RightOf="TextOggiAgenda"
                                           RelativePanel.AlignVerticalCenterWith="TextOggiAgenda"
                                           Visibility="{x:Bind DashboardPageViewModel.IsLoadingAgenda, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </RelativePanel>


                    <controls2:OverviewListView Grid.Row="2" x:Name="OverviewListView"
                                                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                    </controls2:OverviewListView>


                    <HyperlinkButton Grid.Row="2" Content="Apri agenda"
                                     Click="HyperlinkButton_Click_1" VerticalAlignment="Bottom"
                                     HorizontalAlignment="Right" />

                </Grid>

                <Grid CornerRadius="8"
                      Padding="12"
                      BorderThickness="1"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>


                    <RelativePanel Grid.Row="0">

                        <TextBlock x:Name="TitleRecentGrades" Text="Valutazioni recenti" FontSize="20" VerticalAlignment="Top"
                                   HorizontalAlignment="Left" Margin="8,4,0,18" FontWeight="Medium"/> 

                        <muxc:ProgressRing IsActive="True" x:Name="ProgressRingRecentGrades"
                                           RelativePanel.RightOf="TitleRecentGrades"
                                           RelativePanel.AlignVerticalCenterWith="TitleRecentGrades"
                                           Visibility="{x:Bind DashboardPageViewModel.IsLoadingGrades, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />


                        <TextBlock TextWrapping="Wrap"
                                   x:Name="TitleMedia"
                                   TextAlignment="Center" Text="Media totale:" FontSize="16" 
                                   RelativePanel.LeftOf="TextBlockMedia"
                                   RelativePanel.AlignVerticalCenterWith="TitleRecentGrades"
                                   Margin="0,0,6,0" />


                        <muxc:ProgressRing IsActive="True" x:Name="ProgressRingMedia"
                                           RelativePanel.AlignVerticalCenterWith="TitleRecentGrades"

                                           RelativePanel.RightOf="TitleMedia"
                                           Visibility="{x:Bind DashboardPageViewModel.IsLoadingMedia, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />

                        <TextBlock x:Name="TextBlockMedia" Text="test" Visibility="Collapsed"
                                   RelativePanel.AlignRightWithPanel="True"
                                   RelativePanel.AlignVerticalCenterWith="TitleRecentGrades"

                                   FontSize="18" FontWeight="ExtraBold" />


                    </RelativePanel>


                    <ScrollViewer Grid.Row="2" ZoomMode="Disabled"
                                  IsTabStop="False" IsVerticalScrollChainingEnabled="False"

                                  HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">

                        <controls2:GradesListView x:Name="ListRecentGrades"
                                                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"

                                                  ScrollViewer.VerticalScrollMode="Disabled"
                                                  ScrollViewer.VerticalScrollBarVisibility="Disabled" />

                    </ScrollViewer>

                    <HyperlinkButton Grid.Row="2" Content="Visualizza tutte le valutazioni"
                                     Click="HyperlinkButton_Click" VerticalAlignment="Bottom"
                                     HorizontalAlignment="Right" />

                </Grid>


                <Grid
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                    CornerRadius="8"
                    Padding="12"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <RelativePanel Grid.Row="0">

                        <TextBlock x:Name="TextBachecaRecenti" Text="Comunicazioni recenti" FontSize="20" VerticalAlignment="Top"
                                   HorizontalAlignment="Left" Margin="8,4,0,18" FontWeight="Medium"/>

                        <muxc:ProgressRing IsActive="True" x:Name="ProgressRingRecentNotices"
                                           RelativePanel.RightOf="TextBachecaRecenti"
                                           RelativePanel.AlignVerticalCenterWith="TextBachecaRecenti"
                                           Visibility="{x:Bind DashboardPageViewModel.IsLoadingNotices, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </RelativePanel>


                    <ScrollViewer Grid.Row="2" ZoomMode="Disabled"
                                  x:Name="SideScroll"
                                  IsTabStop="False" IsVerticalScrollChainingEnabled="False"
                                  toolkit:FrameworkElementExtensions.EnableActualSizeBinding="true"

                                  HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollMode="Enabled" VerticalScrollBarVisibility="Auto">

                        <controls2:NoticesListView x:Name="ListRecentNotices"
                                                   Width="{Binding ElementName=SideScroll, Path=(toolkit:FrameworkElementExtensions.ActualWidth)}"
                                                   HorizontalAlignment="Stretch" VerticalAlignment="Stretch"

                                                   ScrollViewer.VerticalScrollMode="Disabled"
                                                   ScrollViewer.VerticalScrollBarVisibility="Disabled" />


                    </ScrollViewer>

                    <HyperlinkButton Grid.Row="2" Content="Apri bacheca" x:Name="ButtonApriBacheca"
                                     Click="ButtonApriBacheca_Click" VerticalAlignment="Bottom"
                                     HorizontalAlignment="Right" />


                </Grid>


            </controls2:UniformGridEx>
        </ScrollViewer>


    </Grid>
</Page>