<Page
    x:Class="ClassevivaPCTO.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True">
    <!-- ="{ThemeResource ApplicationPageBackgroundThemeBrush}" -->
    
    <Page.Background>
        <ImageBrush ImageSource="/Assets/LoginBrush1.png" Stretch="UniformToFill" />
    </Page.Background>

    <Grid x:Name="loginGrid">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="48" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid x:Name="AppTitleBar" Background="Transparent">
                <!--  Width of the padding columns is set in LayoutMetricsChanged handler.  -->
                <!--
                    Using padding columns instead of Margin ensures that the background
                    paints the area under the caption control buttons (for transparent buttons).
                -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftPaddingColumn" Width="0" />
                    <ColumnDefinition />
                    <ColumnDefinition x:Name="RightPaddingColumn" Width="0" />
                </Grid.ColumnDefinitions>
                <Image Grid.Column="1" Width="24"
                       Height="24" Margin="12,0,0,0"
                       HorizontalAlignment="Left" Source="/Assets/Square44x44Logo.png" />
                <TextBlock x:Name="AppTitleTextBlock" Grid.Column="1"
                           Margin="40,0,0,4" VerticalAlignment="Center"
                           Style="{StaticResource CaptionTextBlockStyle}"
                           Text="test" />
            </Grid>
        </Grid>

        <Image x:Name="Logo" Width="280"
               Height="60" Margin="0,0,0,500"
               HorizontalAlignment="Stretch" VerticalAlignment="Center"
               RelativePanel.AlignHorizontalCenterWithPanel="True" Source="/Assets/mainlogo.png"
               Stretch="Uniform" />

        <RelativePanel Width="Auto" Height="450"
                       Margin="40,-18,40,0" Padding="12"
                       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                       BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                       BorderThickness="1" CornerRadius="8">

            <!--<RelativePanel.Background>

            </RelativePanel.Background>-->

            <!--<Image x:Name="Hero" Source="/Assets/loginhero.png" Stretch="Uniform" HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch" Margin="0,180,0,0" Height="550" Width="500" RelativePanel.AlignRightWithPanel="True">
                </Image>-->

            <!--<TextBlock x:Name="TextHeader" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignTopWithPanel="True" Margin="12,8,0,0"
                           Text="Titolo" FontWeight="SemiBold" FontSize="24" TextWrapping="WrapWholeWords"/>
                <TextBlock RelativePanel.Below="TextHeader" RelativePanel.AlignLeftWithPanel="True" Margin="12,8,0,0" TextWrapping="WrapWholeWords"
                           Text="LoginHeroDescription" FontWeight="Medium" FontSize="16" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                <Button x:Name="moreinfo" Height="32" MinWidth="90" RenderTransformOrigin="2.13,0.797" HorizontalAlignment="Left" Margin="12,8,0,20"
                        RelativePanel.AlignBottomWithPanel="True" Content="Scopri come" />-->

            <StackPanel x:Name="LoginStackPanel" Width="340"
                        Height="370" Margin="0,20,0,0"
                        Padding="12" Background="Transparent"
                        BorderThickness="2" 
                        BorderBrush="{ThemeResource AccentTextFillColorTertiaryBrush}"
                        CornerRadius="8"
                        RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True">

                <StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition FromVerticalOffset="300" IsStaggeringEnabled="True" />
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>

                <TextBlock x:Uid="LoginWelcome" Height="60"
                           Margin="0,8,0,8" FontSize="28" FontWeight="Medium"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           TextAlignment="Center" />

                <Rectangle Width="Auto" Height="1"
                           Margin="0,-40,0,0"
                           Fill="{ThemeResource TextFillColorDisabledBrush}" />

                <TextBox x:Name="EdittextUsername" x:Uid="LoginUsernameField" Margin="0,0,0,20" />
                
                <PasswordBox x:Name="EdittextPassword" x:Uid="LoginPasswordField" Margin="0,0,0,20" />
                
                <CheckBox x:Name="CheckboxCredenziali" x:Uid="LoginKeepCredentialsCheckbox" Margin="0,0,0,20" />

                <Button x:Name="buttonLogin" x:Uid="LoginButton"
                        Height="32" MinWidth="120"
                        Margin="0,4,0,0" HorizontalAlignment="Center"
                        Click="Button_Click" RenderTransformOrigin="2.13,0.797"
                        Style="{StaticResource AccentButtonStyle}" />

                <muxc:ProgressBar x:Name="progresslogin" Width="340"
                                  Margin="0,20,0,0" HorizontalAlignment="Left"
                                  IsIndeterminate="True" Visibility="Collapsed" />

            </StackPanel>

        </RelativePanel>

        <StackPanel Margin="0,0,0,120" HorizontalAlignment="Center"
                    VerticalAlignment="Bottom" Orientation="Horizontal"
                    Spacing="8">

            <StackPanel.ChildrenTransitions>
                <EntranceThemeTransition FromVerticalOffset="300" FromHorizontalOffset="300" IsStaggeringEnabled="True" />
                <RepositionThemeTransition IsStaggeringEnabled="False" />
            </StackPanel.ChildrenTransitions>

