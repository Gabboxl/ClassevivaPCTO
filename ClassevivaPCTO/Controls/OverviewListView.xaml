<UserControl
    x:Class="ClassevivaPCTO.Controls.OverviewListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassevivaPCTO.Controls"
    xmlns:adapters="using:ClassevivaPCTO.Adapters"
    xmlns:controls2="using:ClassevivaPCTO.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:ClassevivaPCTO.Converters"
    xmlns:microconverters="using:Microsoft.Toolkit.Uwp.UI.Converters"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <microconverters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converters:EmptyListToVisibilityConverter x:Key="EmptyListToVisibilityConverter" />
    </UserControl.Resources>

    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">


        <ScrollViewer>

            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <TextBlock x:Name="AbsencesTitle"
                           Text="Assenze"
                           Margin="16,6,0,6"
                           Visibility="{x:Bind OverviewViewModel.FilteredOverviewResult.AbsenceEvents, Mode=OneWay, Converter={StaticResource EmptyListToVisibilityConverter}}"
                           Style="{ThemeResource BodyStrongTextBlockStyle}" />

                <controls2:AbsencesListView x:Name="AbsencesListView"
                                            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </controls2:AbsencesListView>


                <TextBlock x:Name="GradesTitle"
                           Text="Valutazioni"
                           Margin="16,6,0,6"
                           Visibility="{x:Bind OverviewViewModel.FilteredOverviewResult.Grades, Mode=OneWay, Converter={StaticResource EmptyListToVisibilityConverter}}"
                           Style="{ThemeResource BodyStrongTextBlockStyle}" />

                <controls2:GradesListView x:Name="GradesListView"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </controls2:GradesListView>

                <TextBlock x:Name="LessonsTitle"
                           Text="Lezioni"
                           Margin="16,6,0,6"
                           Visibility="{x:Bind OverviewViewModel.FilteredOverviewResult.Lessons, Mode=OneWay, Converter={StaticResource EmptyListToVisibilityConverter}}"
                           Style="{ThemeResource BodyStrongTextBlockStyle}" />

                <controls2:LessonsListView x:Name="LessonsListView"
                                           HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </controls2:LessonsListView>

                <TextBlock x:Name="AgendaTitle"
                           Text="Agenda"
                           Margin="16,6,0,6"
                           Visibility="{x:Bind OverviewViewModel.FilteredOverviewResult.AgendaEvents, Mode=OneWay, Converter={StaticResource EmptyListToVisibilityConverter}}"
                           Style="{ThemeResource BodyStrongTextBlockStyle}" />


                <controls2:AgendaListView x:Name="AgendaListView"
                                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                </controls2:AgendaListView>

            </StackPanel>

        </ScrollViewer>

        <RelativePanel
            Visibility="{x:Bind OverviewViewModel.AreSourcesEmpty, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
            <FontIcon x:Name="IconCalendar" FontFamily="{StaticResource FluentIcons}" Glyph="&#xE787;"
                      Foreground="{ThemeResource TextFillColorDisabledBrush}"
                      RelativePanel.AlignVerticalCenterWithPanel="True"
                      RelativePanel.AlignHorizontalCenterWithPanel="True"
                      FontSize="142"
                      Margin="0,0,8,0" />

            <TextBlock x:Name="NoEventText"
                       RelativePanel.AlignHorizontalCenterWithPanel="True"
                       RelativePanel.Below="IconCalendar"
                       Foreground="{ThemeResource TextFillColorDisabledBrush}"
                       Margin="0,24,0,0"
                       Text="Nessun evento" FontSize="42" VerticalAlignment="Center"
                       HorizontalAlignment="Center" />
        </RelativePanel>


    </Grid>
</UserControl>