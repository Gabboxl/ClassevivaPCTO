<Page
    x:Class="ClassevivaPCTO.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ClassevivaPCTO"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <muxc:NavigationView x:Name="nvSample" SelectionChanged="NavigationView_SelectionChanged">
            <muxc:NavigationView.MenuItems>
            <muxc:NavigationViewItem   Icon="Forward" Content="Dashboard" Tag="DashboardPage" />
            <muxc:NavigationViewItem   Icon="Forward" Content="Valutazioni" Tag="DettaglioVoti" />
            <muxc:NavigationViewItem  Icon="Forward" Content="Menu Item3" Tag="Agenda" />
            <muxc:NavigationViewItem Icon="Forward" Content="Menu Item4" Tag="Bacheca" />
            </muxc:NavigationView.MenuItems>
        <ScrollViewer>
            <Frame x:Name="contentFrame" IsTabStop="True"/>
        </ScrollViewer>
    </muxc:NavigationView>


    
</Page>
